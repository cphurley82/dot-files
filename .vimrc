" be iMproved, required
set nocompatible

" enable file type detection load filetype plugin and indentaiton files
filetype plugin indent on

" highlight search results
set hlsearch

" search wile typing
set incsearch

" ignore case during search
set ignorecase

" show line numbers
"set number

" set margin indicator
set colorcolumn=80

" shortcut to list buffers
nnoremap ;bl :buffers<CR>:buffer<Space>

" show syntax highlighting
syntax on
